<?xml version="1.0" encoding="utf-8"?>

<!-- ScrollView permite rolar o ecrã se não couber em dispositivos pequenos -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Container vertical com tudo o que aparece no ecrã -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Título do ecrã (instrução para o utilizador) -->
        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolhe o exercício"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="20dp" />

        <!-- "Card" onde está o Spinner para escolher o exercício -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp"
            android:background="#EEEEEE"
            android:elevation="4dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">

            <!-- Spinner: permite escolher Flexões / Agachamentos / Abdominais -->
            <Spinner
                android:id="@+id/spExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- "Card" onde aparecem as estatísticas do treino -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="25dp"
            android:background="#EEEEEE"
            android:elevation="4dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp">

            <!-- Mostra o número de repetições contadas -->
            <TextView
                android:id="@+id/tvReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repetições: 0"
                android:textSize="32sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Mostra o tempo decorrido desde que o utilizador carregou em Iniciar -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo: 00:00"
                android:textSize="20sp"
                android:textColor="#444444" />

        </LinearLayout>

        <!-- Botão que inicia a contagem e o cronómetro -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Iniciar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="15dp"/>

        <!-- Botão que termina o treino e guarda na base de dados -->
        <Button
            android:id="@+id/btnStop"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Parar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#CCCCCC"
            android:enabled="false"/>

    </LinearLayout>

</ScrollView>
