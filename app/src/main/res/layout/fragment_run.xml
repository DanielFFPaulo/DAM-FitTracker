<?xml version="1.0" encoding="utf-8"?>

<!-- Layout do ecrã de corrida -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Mostra a distância percorrida -->
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distância: 0.00 km"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <!-- Mostra o tempo da corrida -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo: 00:00:00"
        android:textSize="20sp"
        android:paddingBottom="8dp"/>

    <!-- Mostra o ritmo médio -->
    <TextView
        android:id="@+id/tvPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ritmo: 0:00 min/km"
        android:textSize="20sp"
        android:paddingBottom="24dp"/>

    <!-- Linha com os botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botão para iniciar a corrida -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar"/>

        <!-- Botão para parar a corrida -->
        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Parar"/>
    </LinearLayout>

</LinearLayout>
